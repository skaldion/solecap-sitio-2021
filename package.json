{
	"name": "eleventy-template",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"clean": "rimraf dist",
		"css:compile": "sass css/main.scss:site/_processed/styles.css",
		"css:prefix": "postcss --config postcss.config.js --replace \"site/_processed/*.css\" \"!site/_processed/*.min.css\"",
		"css:minify": "cleancss --level 1 --format breakWith=lf --output site/_processed/styles.min.css site/_processed/styles.css",
		"js:compile": "rollup --config rollup.config.js --sourcemap",
		"js:minify": "terser --compress typeofs=false --mangle --comments \"/^!/\" --output site/_processed/main.min.js site/_processed/main.js",
		"watch:css": "nodemon --watch css/ --ext scss --exec \"npm-run-all css:compile css:prefix\"",
		"watch:js": "nodemon --watch js/ --ext js --exec \"npm run js:compile\"",
		"watch:site": "NODE_ENV=DEV npx @11ty/eleventy --serve",
		"dev": "npm run clean && npm-run-all --parallel watch:*",
		"build": "npm-run-all clean css:* js:* && npx @11ty/eleventy"
	},
	"keywords": [],
	"author": "dorduna",
	"license": "ISC",
	"devDependencies": {
		"@11ty/eleventy": "^0.11.1",
		"@babel/core": "^7.12.3",
		"@babel/preset-env": "^7.12.7",
		"@rollup/plugin-babel": "^5.2.1",
		"@rollup/plugin-node-resolve": "^10.0.0",
		"autoprefixer": "^10.0.2",
		"bootstrap": "^4.5.3",
		"clean-css-cli": "^4.3.0",
		"jquery": "^3.5.1",
		"nodemon": "^2.0.6",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.1.8",
		"postcss-cli": "^8.3.0",
		"prettier": "^2.1.2",
		"rimraf": "^3.0.2",
		"rollup": "^2.33.3",
		"sass": "^1.29.0",
		"terser": "^5.5.0"
	}
}
