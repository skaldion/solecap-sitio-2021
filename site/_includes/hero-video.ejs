<section class="hero-video <%- additionalClasses %>">
    <div class="container">
        <div class='row'>
            <div class='col-12'>
                <h1><%- mainText %></h1>
            </div>
        </div>
        <div class='row'>
            <div class='col-4'>
                <% firstColumnText.forEach((text) => { %>
                    <p><%- text %></p>
                <% }); %>
            </div>
            <div class='col-4'>
                <% if(imgSrc){%>
                <img class='video-thumbnail' src='<%- imgSrc %>'>
                <% } %>
            </div>
            <div class='col-4'>
                <% secondColumnText.forEach((text) => { %>
                    <p><%- text %></p>
                <% }); %>
            </div>
        </div>
        <div class='cta-button'>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#contact-modal">
                <%- ctaButtonText %>
            </button>
        </div>
    </div>
</section>